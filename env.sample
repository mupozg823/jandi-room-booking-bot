# 서버 설정
PORT=3000
NODE_ENV=development

# 잔디 웹훅 설정
JANDI_OUTGOING_TOKEN=your_jandi_outgoing_webhook_token
JANDI_INCOMING_WEBHOOK_URL=https://wh.jandi.com/connect-api/webhook/xxx

# Google Calendar API 설정
# 서비스 계정 사용 시
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OAuth 사용 시 (대안)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REFRESH_TOKEN=your_refresh_token

# 캘린더 설정
GOOGLE_CALENDAR_TIMEZONE=Asia/Seoul

# 회의실 정책 설정
MAX_BOOKING_DURATION_MINUTES=240
MIN_BOOKING_DURATION_MINUTES=15
BUFFER_MINUTES_BETWEEN_MEETINGS=10
BOOKING_HOURS_START=09:00
BOOKING_HOURS_END=22:00

# 데이터베이스
DATABASE_PATH=./data/bookings.db

# 로깅
LOG_LEVEL=info

